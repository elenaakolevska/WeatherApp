@model WeatherApp.Domain.DomainModels.WeatherAlert

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3>Edit Weather Alert</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserSettingsId" />

            <div class="form-group mb-3">
                <label class="form-label">Location</label>
                <input class="form-control-plaintext" value="@Model.UserSettings?.Location?.City" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="AlertDate" class="form-label">Alert Date</label>
                <input asp-for="AlertDate" class="form-control" type="date" />
                <span asp-validation-for="AlertDate" class="text-danger"></span>
            </div>

            <div class="alert alert-info mb-3">
                @if (!string.IsNullOrEmpty(Model.AlertType))
                {
                    <h5>Current Weather Alert:</h5>
                    <div class="fw-bold">@Html.Raw(Model.AlertType)</div>
                    <h5 class="mt-3">Current Recommendation:</h5>
                    <div>@Html.Raw(Model.RecommendationText)</div>
                }
                else
                {
                    <div class="alert alert-warning">
                        Weather alert will be generated automatically when you save with the new date.
                    </div>
                }
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>