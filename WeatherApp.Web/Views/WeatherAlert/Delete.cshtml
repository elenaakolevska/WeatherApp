@model WeatherApp.Domain.DomainModels.WeatherAlert

@{
    ViewData["Title"] = "Delete Weather Alert";
}

<h1>Delete Weather Alert</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Weather Alert</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">User Settings Id</dt>
        <dd class="col-sm-10">@Model.UserSettingsId</dd>

        <dt class="col-sm-2">Alert Type</dt>
        <dd class="col-sm-10">@Model.AlertType</dd>

        <dt class="col-sm-2">Alert Date</dt>
        <dd class="col-sm-10">@Model.AlertDate.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
