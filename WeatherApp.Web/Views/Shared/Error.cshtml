@using WeatherApp.Domain
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
    <h3 class="text-danger mb-4">An error occurred while processing your request.</h3>

    @if (Model.ShowRequestId)
    {
        <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
    }

    <div class="alert alert-info mt-4">
        <h5>Development Mode Notice</h5>
        <p>
            If you are developing locally, set your <code>ASPNETCORE_ENVIRONMENT</code> variable to <strong>Development</strong> to see detailed error information.
        </p>
        <p>
            <strong>Warning:</strong> Do not enable Development mode on production environments as sensitive information may be exposed.
        </p>
    </div>
</div>
