@model WeatherApp.Domain.DomainModels.Location

@{
    ViewData["Title"] = "Delete Location";
}

<h1>Delete Location</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.City, @Model.Country</h4>
    <dl class="row">
        <dt class="col-sm-2">Latitude</dt>
        <dd class="col-sm-10">@Model.Latitude</dd>
        <dt class="col-sm-2">Longitude</dt>
        <dd class="col-sm-10">@Model.Longitude</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
